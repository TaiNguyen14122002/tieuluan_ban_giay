
@using tieuluan_ban_giay.Models
@model PagedList.PagedList<Giay>
@using PagedList.Mvc

@{
    ViewBag.Title = "SachTheoTheLoai";
    Layout = "~/Views/_LayoutPage1.cshtml";
}

<div class="container-fluid pt-5">
    <div class="text-center mb-4">
        <h2 class="section-title px-5"><span style="background-color: #f1f1f1" class="px-2">Giày theo thể loại</span></h2>
    </div>
    <div class="row px-xl-5 pb-3">
        @foreach (var item in Model)
        {
            <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
                <div class="card product-item border-0 mb-4">
                    <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
                        <img class="img-fluid w-100" src="~/Content/img/Shoes/nike/@item.HinhMinhHoa" alt="">

                    </div>
                    <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                        <h6 class="text-truncate mb-3">@item.Ten_Giay</h6>
                        <div class="d-flex justify-content-center">
                            <h6>@String.Format("{0:0,00}", @item.DonGia) VNĐ</h6><h6 class="text-muted ml-2"><del>@String.Format("{0:0,00}", @item.Gia_Goc) VNĐ</del></h6>
                        </div>
                    </div>
                    <div class="card-footer d-flex justify-content-between bg-light border">
                        <a href="" class="btn btn-sm text-dark p-0"><i class="fas fa-eye text-primary mr-1"></i>chi tiết</a>
                        <a href="" class="btn btn-sm text-dark p-0"><i class="fas fa-shopping-cart text-primary mr-1"></i>Thêm vào giỏ hàng</a>
                    </div>
                </div>
            </div>
        }
    </div>

    <div style="display: flex; align-items: center; justify-content: center;" class="MenuTrang">

        @Html.PagedListPager(Model, page => Url.Action("SachTheoTheLoai", new { page, pagesize = 8 }))
    </div>
    <style>
        .pagination-container ul li {
            margin-left: 10px;
            margin-right: 10px;
        }
    </style>


</div>

