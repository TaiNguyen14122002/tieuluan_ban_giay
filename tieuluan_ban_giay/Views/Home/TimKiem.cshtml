@using tieuluan_ban_giay.Models
@{
    ViewBag.Title = "TimKiem";
    Layout = "~/Views/_LayoutPage1.cshtml";
   
}


<div class="container-fluid pt-5">
    <div class="text-center mb-4">
        <h2 class="section-title px-5"><span style="background-color: #f1f1f1" class="px-2">Danh sách kết quả cho: @ViewBag.search</span></h2>
    </div>
    <div class="row px-xl-5 pb-3">
        @foreach (var item in Model)
        {
            <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
                <div class="card product-item border-0 mb-4">
                    <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
                        <a href="@Url.Action("ChiTietSanPham","Home", new {id = @item.Ma_Giay})"><img class="img-fluid w-100" src="~/Content/img/Shoes/nike/@item.HinhMinhHoa" alt=""></a>

                    </div>
                    <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                        <h6 class="text-truncate mb-3">@item.Ten_Giay</h6>
                        <div class="d-flex justify-content-center">
                            <h6>@String.Format("{0:0,00}", @item.DonGia) VNĐ</h6><h6 class="text-muted ml-2"><del></del></h6>
                        </div>
                    </div>
                    <div class="card-footer d-flex justify-content-between bg-light border">
                        <a href="@Url.Action("ChiTietSanPham","Home", new {id = @item.Ma_Giay})" class="btn btn-sm text-dark p-0"><i class="fas fa-eye text-primary mr-1"></i>chi tiết</a>
                        <a href="@Url.Action("ThemGioHang","GioHang", new { MG =@item.Ma_Giay, url = Request.Url.ToString() })" class="btn btn-sm text-dark p-0"><i class="fas fa-shopping-cart text-primary mr-1"></i>Thêm vào giỏ hàng</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

