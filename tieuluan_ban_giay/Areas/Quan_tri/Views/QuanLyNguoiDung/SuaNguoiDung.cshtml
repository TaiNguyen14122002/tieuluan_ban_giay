@model tieuluan_ban_giay.Models.Khach_Hang

@{
    ViewBag.Title = "SuaNguoiDung";
    Layout = "~/Areas/Quan_tri/Views/_LayoutPage1.cshtml";
}

<div class="be-content">
    <div class="main-content container-fluid">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Ma_Khach_Hang)

                <div class="form-group">
                    @Html.LabelFor(model => model.Ten_Khach_Hang, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <input style="width: 50%; padding: 10px; border-radius: 5px; border: none; border: 1px solid; border-color: #ccc; margin-left: 20px;" type="text" id="Ten_Khach_Hang" name="Ten_Khach_Hang" value="@Model.Ten_Khach_Hang" placeholder="" required />
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.DiaChi_Khach_Hang, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <input style="width: 50%; padding: 10px; border-radius: 5px; border: none; border: 1px solid; border-color: #ccc; margin-left: 20px;" type="text" id="DiaChi_Khach_Hang" name="DiaChi_Khach_Hang" value="@Model.DiaChi_Khach_Hang" placeholder="" required />
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.DienThoai_khach_Hang, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <input style="width: 50%; padding: 10px; border-radius: 5px; border: none; border: 1px solid; border-color: #ccc; margin-left: 20px;" type="text" id="DienThoai_khach_Hang" name="DienThoai_khach_Hang" value="@Model.DienThoai_khach_Hang" placeholder="" required />
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.GioiTinh, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <input style="width: 50%; padding: 10px; border-radius: 5px; border: none; border: 1px solid; border-color: #ccc; margin-left: 20px;" type="text" id="GioiTinh" name="GioiTinh" value="@Model.GioiTinh" placeholder="" required />
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <input style="width: 50%; padding: 10px; border-radius: 5px; border: none; border: 1px solid; border-color: #ccc; margin-left: 20px;" type="text" id="Email" name="Email" placeholder="" value="@Model.Email" required />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input style="border: 1px solid; border-color: #ccc; padding: 5px; background: #ccc; border-radius: 7px; color: #000; font-size: 14px;" type="submit" value="Lưu thông tin" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Trở về", "Index")
        </div>
    </div>
</div>
