@model tieuluan_ban_giay.Models.Giay
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Quan_tri/Views/_LayoutPage1.cshtml";
}
<script src="https://cdn.tiny.cloud/1/rvt1c4e3h6r9h3z9d9rhddwydcn9o15cvz3keb7nt1b10mob/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>

<script>
    tinymce.init({
        selector: '#mytextarea'
    });</script>



<div class="be-content">
    <div class="main-content container-fluid">
        <div class="form-horizontal">
            @*Thêm thuộc tính cho form để upload ảnh*@
            @using (@Html.BeginForm("SuaGiay", "QuanLyGiay", FormMethod.Post, new
            {
                @enctype =
            "multipart/form-data"
            }))
            {
                @Html.AntiForgeryToken()
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label class="control-label col-md-2">Mã Giày:</label>
                    <div class="col-md-10">
                        @*Chỉ hiển thị mã sách không cho sửa*@
                        <input style="padding: 10px; border-radius: 5px; border: none; border: 1px solid; border-color: #ccc;width:50%; margin-left: 20px;" type="text" size="70" id="iMaSach" name="iMaSach" value="@Model.Ma_Giay" readonly />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">Tên Giày:</label>
                    <div class="col-md-10">
                        @*Chỉ hiển thị mã sách không cho sửa*@
                        <input style="padding: 10px; border-radius: 5px; border: none; border: 1px solid; border-color: #ccc;width:50%; margin-left: 20px;" type="text" size="70" id="TenGiay" name="TenGiay" value="@Model.Ten_Giay" required />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">Đơn giá:</label>
                    <div class="col-md-10">
                        <input style="padding: 10px; border-radius: 5px; border: none; border: 1px solid; border-color: #ccc;width:50%; margin-left: 20px;" type="text" size="70" name="DonGia" id="DonGia" value="@Model.DonGia" required />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">Mô tả:</label>
                    <div class="col-md-10">
                        <textarea name="MoTa" id="mytextarea">@Model.MoTa</textarea>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">Hình 1:</label>
                    <div class="col-md-10">
                        <input style="padding: 10px; border-radius: 5px; border: none; border: 1px solid; border-color: #ccc;width:50%; margin-left: 20px;" type="file" name="fFileUpload" />
                        <img src="~/Content/img/Shoes/nike/@Model.HinhMinhHoa" width="120"> (Ảnh hiện tại)
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">Hình 2:</label>
                    <div class="col-md-10">
                        <input style="padding: 10px; border-radius: 5px; border: none; border: 1px solid; border-color: #ccc;width:50%; margin-left: 20px;" type="file" name="fFileUpload" />
                        <img src="~/Content/img/Shoes/nike/Hinh_2/@Model.Hinh_1" width="120"> (Ảnh hiện tại)
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">Giá gốc:</label>
                    <div class="col-md-10">
                        <input style="padding: 10px; border-radius: 5px; border: none; border: 1px solid; border-color: #ccc;width:50%; margin-left: 20px;" type="number" name="GiaGoc" required
                               value="@Model.Gia_Goc" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">Thể loại:</label>
                    <div class="col-md-10">
                        @Html.DropDownList("Ma_TheLoai")
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="LƯU THÔNG TIN" class="btn btn-default" />
                    </div>
                </div>
            }
        </div>

        <div>
            @Html.ActionLink("Trở về", "Index")
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.min.js" integrity="sha384-ODmDIVzN+pFdexxHEHFBQH3/9/vQ9uori45z4JjnFsRydbmQbmL5t1tQ0culUzyK" crossorigin="anonymous"></script>
    </div>
    <style>
        #Ma_TheLoai {
            padding: 10px;
            border-radius: 5px;
            border: none;
            border: 1px solid;
            border-color: #ccc;
            margin-left: 20px;
        }
    </style>
</div>