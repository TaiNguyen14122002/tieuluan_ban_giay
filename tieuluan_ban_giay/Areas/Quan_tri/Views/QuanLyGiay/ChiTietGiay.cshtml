@model tieuluan_ban_giay.Models.Giay
    @using tieuluan_ban_giay.Models
@{
    ViewBag.Title = "ChiTietGiay";
    Layout = "~/Areas/Quan_tri/Views/_LayoutPage1.cshtml";
    QLBangiayyEntities db = new QLBangiayyEntities();
    var theloai = from x in db.Giays
                  join t in db.The_Loai
                  on x.Ma_TheLoai equals t.Ma_TheLoai
                  select new
                  {
                      t.Ten_TheLoai
                  };
}

<script src="https://cdn.tiny.cloud/1/rvt1c4e3h6r9h3z9d9rhddwydcn9o15cvz3keb7nt1b10mob/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>

<script>
tinymce.init({
        selector: '#mytextarea'
    });</script>
<div class="be-content">
    <div class="main-content container-fluid">
        <div class="container">
            
                @Html.AntiForgeryToken()
                <div class="form-horizontal">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        <label class="control-label col-md-2">Tên Giày:</label>
                        <div class="col-md-10">
                            <input style="padding: 10px; border-radius: 5px; border: none; border: 1px solid; border-color: #ccc; margin-left: 20px;" type="text" size="70" name="TenGiay" value="@Model.Ten_Giay"
                                   readonly />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">Đơn giá:</label>
                        <div class="col-md-10">
                            <input style="padding: 10px; border-radius: 5px; border: none; border: 1px solid; border-color: #ccc; margin-left: 20px;" type="number" min="1" required name="DonGia"
                                   value="@Model.DonGia" readonly />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">Mô tả:</label>
                        <div class="col-md-10">

                            <textarea name="MoTa" id="mytextarea" readonly>@Model.MoTa</textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">Hình 1:</label>
                        <div class="col-md-10">
                           
                            <img src="~/Content/img/Shoes/nike/@Model.HinhMinhHoa" width="120"> 
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label class="control-label col-md-2">Giá gốc:</label>
                        <div class="col-md-10">
                            <input style="padding: 10px; border-radius: 5px; border: none; border: 1px solid; border-color: #ccc; margin-left: 20px;" type="number" name="Gia_Goc" required
                                   value="@Model.Gia_Goc" />
                        </div>
                    </div>
                    <div style="margin-top:10px" class="form-group">
                        <label class="control-label col-md-2">Thể loại:</label>
                        <div style="margin-top: 10px;" class="col-md-10">
                            
                            <a style="padding: 10px; border-radius: 5px; border: none; border: 1px solid; border-color: #ccc; margin-left: 20px;"  min="1" readonly name="">
                                   @Html.DisplayFor(modelItem =>Model.The_Loai.Ten_TheLoai)</a>
                        </div>
                    </div>
                    
                </div>

                <div style="margin-top: 30px; display: flex; align-items: center; ">
                    <a style="border-radius: 5px; margin-right:30px" href="@Url.Action("SuaGiay", new {id =Model.Ma_Giay})" class="btn btn-warning" role="button">Sửa</a>
                    @Html.ActionLink("Trở về", "Index")
                </div>




            
        </div>
    </div>
</div>

<style>
    #Ma_TheLoai {
        padding: 10px;
        border-radius: 5px;
        border: none;
        border: 1px solid;
        border-color: #ccc;
        margin-left: 20px;
    }
</style>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.min.js" integrity="sha384-ODmDIVzN+pFdexxHEHFBQH3/9/vQ9uori45z4JjnFsRydbmQbmL5t1tQ0culUzyK" crossorigin="anonymous"></script>
